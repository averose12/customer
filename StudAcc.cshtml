        text-align: center;
        float: left;
    }

    input[type=radio] {
        padding: 12px 20px;
        margin: 8px 0;
        background: transparent;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        text-align: center;
    }
    

    input[type=password], [type=number], [type=date], [type=text], [type=tel] {
        width: 80%;
        height: 30px;
        margin-left: 8px;
